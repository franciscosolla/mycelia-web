generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Chain {
  bitcoin
  ethereum
  solana
}

model CoinMetadata {
  chain     Chain
  address   String
  name      String
  symbol    String
  decimals  Int
  logo      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([chain, address])
  @@index([chain])
}
